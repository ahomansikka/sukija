<!--
Esimerkki siitä, miten hakemistot ${user.home}/Asiakirjat ja /usr/local/data indeksoidaan.
Muuttuja ${user.home} täytyy korvata kotihakemiston nimellä.
-->
<dataConfig>
   <dataSource name="bin" type="BinFileDataSource"/>
   <document>
    <entity name = "f0"
            dataSource = "null"
            rootEntity = "false"
            processor = "solr.handler.dataimport.FileListEntityProcessor"
            baseDir = "${user.home}/Asiakirjat"
            fileName = ".*"
            excludes = "(?u)(?i).*[.](au|bmp|bz2|class|gif|gpg|gz|jar|jpg|jpeg|m|o|pdf|png|tif|tiff|wav|zip)$"
            recursive = "true">
      <field column = "fileAbsolutePath" meta = "true" name = "id"/>
      <entity name = "tika"
              dataSource = "bin"
              processor = "solr.handler.dataimport.TikaEntityProcessor"
              tikaConfig = "tika-config.xml"
              url = "${f0.fileAbsolutePath}"
              format = "text"
              onError = "abort">
      </entity>
    </entity>
    <entity name = "f1"
            dataSource = "null"
            rootEntity = "false"
            processor = "solr.handler.dataimport.FileListEntityProcessor"
            baseDir = "/usr/local/data"
            fileName = ".*"
            excludes = "(?u)(?i).*[.](au|bmp|bz2|class|gif|gpg|gz|jar|jpg|jpeg|m|o|pdf|png|tif|tiff|wav|zip)$"
            recursive = "true">
      <field column = "fileAbsolutePath" meta = "true" name = "id"/>
      <entity name = "tika"
              dataSource = "bin"
              processor = "solr.handler.dataimport.TikaEntityProcessor"
              tikaConfig = "tika-config.xml"
              url = "${f1.fileAbsolutePath}"
              format = "text"
              onError = "abort">
      </entity>
    </entity>
  </document>
</dataConfig>
