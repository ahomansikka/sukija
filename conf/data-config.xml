<dataConfig>
  <dataSource name="bin" type="BinFileDataSource"/>
  <document>
    <entity name = "f"
            dataSource = "null"
            rootEntity = "false"
            processor = "solr.handler.dataimport.FileListEntityProcessor"
            baseDir = "/home/hvaisane/Asiakirjat/koe"
            fileName = ".*"
            excludes = "(?u)(?i).*[.](au|bmp|bz2|class|gif|gpg|gz|jar|jpg|jpeg|m|o|png|tif|tiff|wav|zip)$"
            recursive = "true">
      <field column = "fileAbsolutePath" meta = "true" name = "id"/>
      <entity name = "tika"
              dataSource = "bin"
              processor = "solr.handler.dataimport.TikaEntityProcessor"
              url = "${f.fileAbsolutePath}"
              format = "text"
              onError = "skip">
      </entity>
    </entity>
  </document>
</dataConfig>
